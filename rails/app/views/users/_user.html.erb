	<div class="user">
		<% if user.facebook_uid %>
		<div class="avatar">
			<%= fb_profile_pic(user.facebook_uid, :linked => false) %>
		</div>
		<% end %>
		
	    <h3>
			<%= link_to(user.pretty_name, user_path(user)) %>
			<% if current_user and current_user != user %>
			<span>
				<% if current_user.is_friends_with?(user) %>
					<%= link_to "Remove as Friend", current_user.get_friendship_from(user), :method => :delete %>
				<% else %>
					<%= link_to "Add as Friend", friendships_path(:friend_id => user), :method => :post %>
				<% end %>
			</span>
			<% end %>
		</h3>
		
		<p><%= link_to("#{user.posts.count} Posts", user_social_sets_path(user)) %></p>
		<p><%= link_to("#{user.personal_sets.count} Events", user_social_sets_path(user)) %></p>
		
		<p><%= user.mutual_friends.length %> Friends</p>
		
	</div>