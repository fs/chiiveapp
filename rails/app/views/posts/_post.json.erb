<%
array = post.photo.url('small').split('/')
array.pop()
array.pop()
path = array.join('/')

concat "{\"post\":{"
concat "\"uuid\":\"#{post.uuid}\","
concat "\"user_uuid\":\"#{post.user.uuid}\","
concat "\"title\":\"#{escape_json(post.title)}\","
concat "\"captured_at\":#{post.time_at.to_json},"
concat "\"photo_file_name\":\"#{escape_json(post.photo_file_name)}\","
concat "\"photo_path\":\"#{path}\""
if (defined?(show_comments))
	concat ",\"comments\":["
	concat post.comments.map { |comment| render comment }.join(",")
	concat "]"
end
concat "}}"
%>