
<% form_for comment  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  
	<%= f.hidden_field :commentable_id  %>
	<%= f.hidden_field :commentable_type  %>
	<%= hidden_field_tag :redirect_url, redirect_url  %>

  <p>
    <%= f.submit ((comment.id)?"edit":"create")  %>
  </p>
  
<% end %>
	<div class="clear"><!-- --></div>

	